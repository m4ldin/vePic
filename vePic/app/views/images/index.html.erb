<h1>Listing images</h1>

<table>
  <tr>
    <th>Slide</th>
    <th>Path</th>
    <th>Title</th>
    <th>Author</th>
  </tr>

<% @images.each do |image| %>
  <tr>
    <td><%=h image.slide_id %></td>
    <td><%=h image.path %></td>
    <td><%=h image.title %></td>
    <td><%=h image.author %></td>
    <td><%= link_to 'Show', image_path(image) %></td>
    <td><%= link_to 'Edit', edit_image_path(image) %></td>
    <td><%= link_to 'Destroy', image, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New image', new_image_path %>