<%= render :partial => @topic %>

<p>
<%= link_to 'Edit', edit_topic_path(@topic) %> | 
<%= link_to 'Delete', @topic, :method => :delete, :confirm => "Are you sure?" %> |
<%= link_to 'Back', topics_path %>
</p>

<div id="posts">
	<%= render :partial => @topic.posts %>
</div>

<% remote_form_for [@topic, Post.new] do |f| %>
	<p>
		<%= f.label :body, "Reply to this topic" %><br />
		<%= f.text_area :body %>
	</p>
	<p><%= f.submit "Reply" %></p>
<% end %>